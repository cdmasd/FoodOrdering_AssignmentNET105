@model Category;
@{
    Layout = "_LayoutManage";
    ViewData["title"] = "Category Detail";
}
<div class="container my-5">
    <div class="card" style="width:100%;">
        <div class="card-header text-center h4">Food Detail</div>
        <div class="card-body">
            <div class="row">
                <div class="col-5 text-center">
                    <img src="@Model.ImageUrl" width="200px" />
                </div>
                <div class="col-7">

                    <div class="mb-2">
                        <label asp-for="CategoryId"></label>
                        <input class="form-control border-2" asp-for="@Model.CategoryId" readonly />
                    </div>
                    <div class="mb-2">
                        <label asp-for="Name"></label>
                        <input class="form-control border-2" asp-for="@Model.Name" readonly />
                    </div>
                    <div class="mb-2">
                        <label asp-for="ImageUrl"></label>
                        <input class="form-control border-2" asp-for="@Model.ImageUrl" readonly />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Categories" class="btn btn-primary">Go Back</a>
            <a asp-action="UpdateCate" asp-route-id="@Model.CategoryId" class="btn btn-warning">Update this category</a>
        </div>
    </div>
</div>

