@model Food
@{
    ViewData["title"] = "Food details";
}
<div class="mb-3 row box-shadow-edit p-3 rounded-2">
    <div class="col-3">
        <img src="https://placehold.co/200x200" width="300px" height="300px"/>
    </div>
    <div class="offset-1 col-8" style="position:relative; top:30px; left:100px;">
        <div class="h2 fw-bold text-warning">@Model.Name.ToUpper()</div>
        <div class="h5">Giá : @Model.UnitPrice.ToString("#,##") vnđ</div>
        <div class="h6 py-1">Lượt xem : @Model.View</div>
        <div class="h6 py-1">Số lượng :</div>
        <div class="btn-group w-25 py-1">
            <button class="btn btn-warning" onclick="decrease()">-</button>
            <input type="number" class="form-control rounded-0 text-center" id="quantity" disabled value="1" />
            <button class="increase btn btn-warning" onclick="increase()">+</button>
        </div>
        <div class="d-flex justify-content-between py-3" style="width:250px;">
            <a asp-controller="Food" asp-action="Index" class="btn btn-outline-warning">Quay về</a>
            <a asp-controller="Cart" asp-action="AddtoCart" asp-route-id="@Model.FoodId" class="btn btn-warning">Thêm giỏ hàng</a>
        </div>
    </div>
</div>
