<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodGive</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment_UI.styles.css" asp-append-version="true" />
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <link rel="stylesheet" href="~/css/animate.css" />
</head>
<body>
    <header class="container py-3 bg-opacity-10">
        @* Nav *@
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-light bg-secondary box-shadow-edit mb-3 rounded-4 px-2" data-bs-theme="light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Food<span class="fw-bolder text-warning">Give</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor03">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" href="#"><ion-icon name="fast-food-outline" class="fs-5 pe-1"></ion-icon>Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" href="#"><ion-icon name="document-text-outline" class="fs-5 pe-1"></ion-icon>About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" href="#"><ion-icon name="mail-outline" class="fs-5 pe-1"></ion-icon>Contact</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-primary my-2 my-sm-0 text-secondary me-2" asp-action="">Sign in</a>
                        <a class="btn btn-outline-warning my-2 my-sm-0" asp-action="">Sign up</a>
                    </div>
                </div>
            </div>
        </nav>
        @* Carousel *@
        <div id="carouselExample" class="carousel slide">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/image/bn1.png" class="d-block w-100 rounded-3">
                </div>
                <div class="carousel-item">
                    <img src="~/image/bn2.png" class="d-block w-100 rounded-3">
                </div>
                <div class="carousel-item">
                    <img src="~/image/bn3.png" class="d-block w-100 rounded-3">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2024 - Phan Đức Tiến - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
            <script src="~/js/wow.min.js"></script>
    <script>
        new WOW().init();
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
